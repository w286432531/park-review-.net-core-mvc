@model ReviewsSite.Models.Park


@{
    ViewData["Title"] = "Park Detail";
}

<h1>Detail</h1>

<div>
    <h4>Park</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HasHandicapAccess)
        </dt>
        <dd class="col-sm-10">
            @if (Model.HasHandicapAccess)
            {
                <text>Yes</text>
            }
            else
            {
                <text>No</text>
            }
            @*@Html.DisplayFor(model => model.HasHandicapAccess)*@
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsDogFriendly)
        </dt>
        <dd class="col-sm-10">
            @if (Model.IsDogFriendly)
            {
                <text>Yes</text>
            }
            else
            {
                <text>No</text>
            }
            @*@Html.DisplayFor(model => model.IsDogFriendly)*@
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ParkType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ParkType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AverageRating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AverageRating)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ParkDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ParkDescription)
        </dd>
    </dl>
    <hr />
    <h4>Review</h4>
    @foreach (var r in Model.Reviews)
    {
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => r.ReviewerName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => r.ReviewerName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => r.StarRating)
            </dt>
            <dd class="col-sm-10">
                @*@Html.DisplayFor(model => model.StarRating)*@
                @for (int i = 0; i < r.StarRating; i++)
                {
                    <img src="~/icon/star.png" alt="stars" style="width:24px;" />
                }
                @for (int i = 0; i < 5 - r.StarRating; i++)
                {
                    <img src="~/icon/emptystar.png" alt="empty stars" style="width:24px;" />
                }
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => r.Comment)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => r.Comment)
            </dd>

        </dl>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a href="/Review/Create">Add a Review</a> |
    <a asp-action="Index">Back to List</a>

</div>
